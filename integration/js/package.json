{
  "name": "@gtoru/js-integration",
  "private": true,
  "version": "1.0.0",
  "jest": {
    "preset": "ts-jest/presets/default",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ]
  },
  "scripts": {
    "test": "yarn test:auth && yarn test:task && yarn test:quiz",
    "test:auth": "jest --env node --config jest.auth.config.js",
    "test:task": "jest --env node --config jest.task.config.js",
    "test:quiz": "jest --env node --config jest.quiz.config.js"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.2.7",
    "prettier": "^2.0.3",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  }
}
